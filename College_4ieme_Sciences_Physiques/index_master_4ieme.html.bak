.btn-disabled { background:#334155;color:#64748b;pointer-events:none; }
footer { text-align:center;font-size:.58rem;padding:2.1rem .5rem 2.8rem;opacity:.6; }
.note { margin-top:2rem;font-size:.62rem;opacity:.7; }
.back-home { text-decoration:none; font-size:.58rem; font-weight:600; background:rgba(255,255,255,.08); color:#fff; padding:.33rem .55rem; border-radius:6px; border:1px solid rgba(255,255,255,.15); display:inline-block; margin-top:.4rem; letter-spacing:.05em; }
