body { margin:0;font-family:'Segoe UI',Tahoma,Verdana,sans-serif;line-height:1.55;background:linear-gradient(135deg,#0f172a,#1e293b);color:var(--fg); }
header { background:var(--accent);color:#fff;padding:1.4rem 1.1rem;position:sticky;top:0;z-index:30; }
