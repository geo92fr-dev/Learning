<style>
:root { --bg:#0f172a; --fg:#f1f5f9; --accent:#f97316; --accent-contrast:#ea580c; --soft:#1e3a56; --border:#334155; --radius:14px; --shadow:0 2px 6px rgba(0,0,0,.45); }
body { margin:0;font-family:'Segoe UI',Tahoma,Verdana,sans-serif;line-height:1.55;background:linear-gradient(135deg,#0f172a,#1e293b);color:var(--fg); }
header { background:var(--accent);color:#fff;padding:1.4rem 1.1rem;position:sticky;top:0;z-index:30; }
header h1 { margin:.2rem 0 .4rem;font-size:1.55rem; }
.subtitle { font-size:.85rem;opacity:.9; }
.container { max-width:1100px;margin:0 auto;padding:2rem clamp(.8rem,2vw,1.3rem) 3rem; }
.grid { display:grid;gap:1.1rem;grid-template-columns:repeat(auto-fit,minmax(300px,1fr)); }
.card { background:#223042;border:1px solid var(--border);border-radius:var(--radius);padding:1rem 1.05rem;box-shadow:var(--shadow);display:flex;flex-direction:column; }
.card h3 { margin:.2rem 0 .5rem;font-size:1rem; }
.line { display:flex;align-items:center;gap:.55rem; }
.num { background:var(--accent);color:#fff;font-size:.6rem;font-weight:600;padding:.33rem .5rem;border-radius:6px;min-width:1.8rem;text-align:center;letter-spacing:.05em; }
.desc { font-size:.7rem;opacity:.85;margin:.45rem 0 .55rem;flex:1; }
.actions { display:flex;flex-wrap:wrap;gap:.4rem; }
.btn { text-decoration:none;font-size:.65rem;font-weight:600;padding:.4rem .62rem;border-radius:6px;transition:all .2s ease;display:inline-block; }
.btn-primary { background:var(--accent);color:#fff; }
.btn-primary:hover { background:var(--accent-contrast); }
.btn-disabled { background:#334155;color:#64748b;pointer-events:none; }
footer { text-align:center;font-size:.58rem;padding:2.1rem .5rem 2.8rem;opacity:.6; }
.note { margin-top:2rem;font-size:.62rem;opacity:.7; }
.back-home { text-decoration:none; font-size:.58rem; font-weight:600; background:rgba(255,255,255,.08); color:#fff; padding:.33rem .55rem; border-radius:6px; border:1px solid rgba(255,255,255,.15); display:inline-block; margin-top:.4rem; letter-spacing:.05em; }
.back-home:hover { background:var(--accent-contrast); color:#fff; }
@media (max-width:680px){ .grid{grid-template-columns:1fr;} }
